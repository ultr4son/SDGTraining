@using PeopleProTraining.Models
@using System.Web.Optimization
@model ItemCreatorModel

@Scripts.Render("~/bundles/jquery")

<script>
    window.onload = function () {
        $("#submitButton").click(function (e) {
            e.preventDefault();
            var itemName = $("#editor").val()
            $.post("/@Model.Controller/Add", { "itemName": itemName },
            function (result) {
                $("#@Model.TableId").html(result);

            })
                

        })
    }
</script>

    @Html.AntiForgeryToken()

    <div class="form-horizontal" id="createForm">
        <h4>Add New</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label(Model.Label, htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.Editor(Model.Label, new { htmlAttributes = new { @class = "form-control", id = "editor" } })
                @Html.ValidationMessage(Model.Label, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button id="submitButton" class="btn btn-default" >Add</button>
            </div>
        </div>
    </div>


